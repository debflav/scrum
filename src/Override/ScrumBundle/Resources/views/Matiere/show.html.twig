{% extends '::base.html.twig' %}

{% block body -%}
<a href="{{ path('matiere') }}"><span class="glyphicon glyphicon-arrow-left"></span> Revenir à la liste</a> |
<a href="{{ path('matiere_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span> Modifier</a> |
{{ form(delete_form) }}
<br /><br />

<div class="panel panel-default">
    <div class="panel-heading"><strong>Matière {{ entity.nom }}</strong></div>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Coefficient</th>
                <td>{{ entity.coefficient }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
