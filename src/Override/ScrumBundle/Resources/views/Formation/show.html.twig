{% extends '::base.html.twig' %}

{% block body -%}

    <a href="{{ path('formation') }}"><span class="glyphicon glyphicon-arrow-left"></span> Revenir aux formations</a>
    <a href="{{ path('formation_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>

    {{ form(delete_form) }}

    <div class="panel panel-default">
        <div class="panel-heading">Formation {{ entity.nom }}</div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.nom }}</td>
                </tr>
                <tr>
                    <th>Descriptif</th>
                    <td>{{ entity.descriptif }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {% if cursus|length > 0 %}
        <h1>Cursus</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ cursus.dateDebut.date|date('Y-m-d') }}</td>
                    <td>{{ cursus.dateFin.date|date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <td>Todo matiere</td>
                    {% for oneMatiere in cursus.matiere %}
                        {{dump(oneMatiere)}}
                    {% endfor %}
                </tr>
            </tbody>
        </table>
    {% else %}
        <p> Aucune matière pour cette formation </p>
    {% endif %}
{% endblock %}
