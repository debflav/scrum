{% extends '::base.html.twig' %}

{% block body -%}
{% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-danger" href="{{ path('formation_new') }}">Ajouter une formation</a>
{% endif %}
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>Les formation</strong></div>

    {% if entities|length > 0 %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Descriptif</th>
                    <th>Secretaire formation</th>
                    <th>Crit√®re d'acceptation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.descriptif }}</td>
                    <td>{{ entity.secretaireformation.user.username }}</td>
                    <td>{{ entity.critere }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('formation_show', { 'id': entity.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('formation_edit', { 'id': entity.id }) }}">editer</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% else %}
        <div class="panel-body">
            <p> Aucune formation actuellement </p>
        </div>
    {% endif %}
</div>
{% endblock %}