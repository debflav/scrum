{% extends '::base.html.twig' %}

{% block body -%}
<a class="btn btn-danger" href="{{ path('formation_new') }}">Ajouter une formation</a>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>Les formation</strong></div>

    {% if entities|length > 0 %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Descriptif</th>
                <th>Secretaire formation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.descriptif }}</td>
                <td>{{ entity.secretaireformation.user.nom }}</td>
                <td>
                    <a href="{{ path('formation_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                    <a href="{{ path('formation_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% else %}
    <p> Aucune formation actuellement </p>
    {% endif %}
</div>
{% endblock %}