{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Les cursus</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Date début</th>
                <th>Date début</th>
                <th>Formation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cursus_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dateDebut|date("m/d/Y") }}</td>
                <td>{{ entity.dateFin|date("m/d/Y") }}</td>
                <td>{{ entity.formation.nom }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cursus_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cursus_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-primary" href="{{ path('cursus_new') }}">
                Ajouter un cursus
            </a>

    {% endblock %}
