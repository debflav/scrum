{% extends '::base.html.twig' %}

{% block body -%}
<a class="btn btn-danger" href="{{ path('cursus_new') }}">Ajouter une cursus</a>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>Les Cursus</strong></div>
    {% if entities|length > 0 %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Date début</th>
                <th>Date début</th>
                <th>Formation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cursus_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dateDebut|date("m/d/Y") }}</td>
                <td>{{ entity.dateFin|date("m/d/Y") }}</td>
                <td>{{ entity.formation.nom }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cursus_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cursus_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="panel-body">
        <p> Aucune cursus actuellement </p>
        </div>
    {% endif %}
</div>
{% endblock %}
