{% extends '::base.html.twig' %}

{% block body -%}
<a class="btn btn-success" href="{{ path('cursus_new') }}">Ajouter une cursus</a>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>Les Cursus</strong></div>
    {% if entities|length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Date début</th>
                <th>Date début</th>
                <th>Formation</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.dateDebut|date("m/d/Y") }}</td>
                <td>{{ entity.dateFin|date("m/d/Y") }}</td>
                <td>{{ entity.formation.nom }}</td>
                <td>
                    <a class="pull-right glyphicon glyphicon-edit" href="{{ path('cursus_show', { 'id': entity.id }) }}"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="panel-body">
            <p> Aucune cursus actuellement </p>
        </div>
    {% endif %}
</div>
{% endblock %}
