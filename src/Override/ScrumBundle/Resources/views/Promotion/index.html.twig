{% extends '::base.html.twig' %}

{% block body -%}
<a class="btn btn-danger" href="{{ path('promotion_new') }}">Ajouter une promotion</a>
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>Les Promotions</strong></div>
    {% if entities|length > 0 %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identifiant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.identifiant }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('promotion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('promotion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="panel-body">
            <p> Aucune promotion actuellement </p>
        </div>
    {% endif %}
</div>
    {% endblock %}
